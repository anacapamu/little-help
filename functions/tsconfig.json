{
  "compilerOptions": {
    "lib": ["es6"],
    "target": "ES2020",
    "module": "ESNext",
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "outDir": "lib",
    "rootDir": "./src",
    "sourceMap": true,
    "resolveJsonModule": true,
  },
  "compileOnSave": true,
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
